# ================================
# CONFIGURAÇÕES DO AMBIENTE
# ================================

# Flask Configuration
FLASK_APP=app.py
FLASK_HOST=0.0.0.0
FLASK_PORT=7000
FLASK_DEBUG=false

# Diretórios da aplicação
UPLOAD_FOLDER=./Entrada
PROCESSED_FOLDER=./Saida

# Configurações de segurança
MAX_FILE_SIZE=16
SECRET_KEY=your-secret-key-here-change-in-production

# ================================
# CONFIGURAÇÕES DE HARDWARE - DOCKER
# ================================

# Limites de CPU (em número de cores)
DOCKER_CPU_LIMIT=0.25
DOCKER_CPU_RESERVATION=0.1

# Limites de Memória (em MB)
DOCKER_MEMORY_LIMIT=1G
DOCKER_MEMORY_RESERVATION=128

# Configurações de GPU (se disponível)
# Descomente para usar GPU com OpenCV
# DOCKER_GPU_ENABLED=true
# DOCKER_GPU_DEVICE_IDS=0

# ================================
# CONFIGURAÇÕES DE PROCESSAMENTO
# ================================

# Limites de processamento de imagem
MAX_IMAGE_WIDTH=4096
MAX_IMAGE_HEIGHT=4096
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,tiff,tif

# Configurações de cache
ENABLE_CACHE=true
CACHE_TIMEOUT=3600

# ================================
# CONFIGURAÇÕES DE LOG
# ================================

LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ================================
# VARIÁVEIS DE DESENVOLVIMENTO
# ================================

# Para desenvolvimento local, descomente as linhas abaixo:
# FLASK_DEBUG=true
# LOG_LEVEL=DEBUG

# Para produção, mantenha as configurações padrão acima
